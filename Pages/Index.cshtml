@page
@model CronReminder.Pages.IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}
@{
    int counter = 0;
}
@if (Model.reminderList.Count() == 0 )
{
    <div class="container">
        <div class="row">            
            <div class="col-lg-12">
                <h1 style="text-align:center ">Empty Reminders</h1>
            </div>
        </div>
    </div>
}
else
{
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name </th>
            <th>Due Date </th>
            <th>Edit Reminder</th>
        </tr>
    </thead>
    @foreach (var item in Model.reminderList)
    {

        counter = counter + 1;
        <tr>
            <td>@counter</td>
            <td>@item.ReminderName</td>
            <!--<td>@item.ReminderDescription</td>-->
            <td>@item.ReminderDate.ToShortDateString()</td>
           <td><a asp-page="/Edit" asp-route-reminderId="@item.ReminderId">Edit <i class="fas fa-edit"></i></a></td>
        </tr>
    }
</table>
}




